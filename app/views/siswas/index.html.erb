<div class="row">
	<div class="col-md-12">
        <div class="panel panel-default">
            <div class="panel-heading">
                <h2 class="panel-title">Data Siswa</h2>
            </div>
            <div class="panel-body">
                <% if user_signed_in? %>
                <div class="alert alert-info">
                    <p align="right"><b>Jumlah Siswa Daftar Ulang : <%= @siswas.count %> siswa</b></p>
                </div>
                <hr>
                <div class="alert alert-success">
                    <b>Jumlah siswa yang telah daftar ulang : </b>
                    <table>
                        <thead>
                            <tr>
                                <th>Laki-laki</th>
                                <th> : </th>
                                <th><%= Siswa.total_laki %> siswa</th>
                            </tr>
                            <tr>
                                <th>Perempuan &nbsp;</th>
                                <th> : &nbsp;</th>
                                <th><%= Siswa.total_perempuan %> siswa</th>
                            </tr>
                            <tr>
                                <th>Jumlah</th>
                                <th> : </th>
                                <th><%= Siswa.total_jenisKelamin %> siswa</th>
                            </tr>
                        </thead>
                    </table>
                </div>
                <hr>
                <% end %>
                <%= content_tag :table, role: :datatable, data: { url: siswas_path(format: :json)} do %>
                    <thead>
                        <tr>
                            <th>No. Pendaftaran</th>
                            <th>NISN</th>
                            <th>Nama Siswa</th>
                            <th>JK</th>
                            <th>Tempat Lahir</th>
                            <th>Tanggal Lahir</th>
                            <% if user_signed_in? %>
                                <th></th>
                            <% end %>
                        </tr>
                    </thead>
                    <tbody>

                    </tbody>
                <% end %>
                <hr>
                <% if user_signed_in? %>
                    <%= form_tag import_siswas_path, multipart: true, class: 'form-inline' do %>

                      <div class="form-group">
                        <%= link_to "Export Data Siswa ke CSV", siswas_path(format: "csv"), class: 'btn btn-primary' %>
                      </div>
                      <div class="form-group">
                        <%= file_field_tag :file, class: '' %>
                      </div>
                      
                      <div class="form-group">
                        <%= submit_tag "Import Data Siswa", class: 'btn btn-info' %>
                      </div>

                      <div class="form-group">
                        <%= link_to 'Tambah Data Siswa Baru', new_siswa_path, class: 'btn btn-primary' %>
                      </div>
                    <% end %>
                <% end %>
            </div>
        </div>
    </div>
</div>